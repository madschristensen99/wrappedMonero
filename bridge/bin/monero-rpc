#!/usr/bin/env sh
# This script starts up a Monero wallet RPC endpoint that you can use to query
# the Monero blockchain for confirmed transactions
set -e

# Find endpoints here
# https://monero.fail/?chain=monero&network=stagenet
rpc_endpoint=stagenet.xmr-tw.org:38081
# Point this to the wallet that you use to receive XMR to be wrapped
wallet_file=$HOME/Monero/wallets/wallet_3

exec monero-wallet-rpc \
    --stagenet \
    --daemon-address "$rpc_endpoint" \
    --rpc-bind-port 38081 \
    --rpc-login monero:rpcPassword \
    --wallet-file "$wallet_file" \
    --password ""
